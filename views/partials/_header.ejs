<header>
  <nav class="navbar navbar-expand-md navbar-dark bg-success">
    <a class="navbar-brand" href="/urls">TinyApp</a>
    <button class="navbar-toggler" type="button" data-toggle="collapse" data-target="#navbarNavAltMarkup" aria-controls="navbarNavAltMarkup" aria-expanded="false" aria-label="Toggle navigation">
      <span class="navbar-toggler-icon"></span>
    </button>
    <div class="collapse navbar-collapse" id="navbarNavAltMarkup">
      <div class="navbar-nav w-25">
        <a class="nav-item nav-link" href="/urls">My URLs</a>
        <a class="nav-item nav-link" href="/urls/new">Create New URL</a>
      </div>
      <div class = "w-75 text-right">
      <% if(!username) { %> 
      <form action="/login" method="POST">
      <input class="form-group mx-sm-1 mb-1" type="text" name="username" placeholder="username">
        <button type="submit" class="btn btn-outline-dark">Log in</button> 
      </form>   
      <% } else { %>
        <form action="/logout" method="POST">
        <span>Logged in As: <%= username %></span>
          <button type="submit" class="btn btn-outline-dark ml-3">Logout</button>
        </form>
        <% } %>
    </div>
    </div>
  </nav>
</header>

